<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/mainBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yongjin.flaborfit.DetailsActivity"
    android:background="#2ca5f5">

    <TextView
        android:text="Weight Lift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseTitle"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@android:color/background_light"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:id="@+id/exerciseImage"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_cornera"
        android:backgroundTint="#20000000"
        android:id="@+id/table">

        <TextView
            android:text="Mark It Complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="30dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"/>

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="100dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#FFF"
            />

        <CheckBox
            android:text="Complete Set 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="100dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#FFF"/>
        <CheckBox
            android:text="Complete Set 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="100dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#FFF"/>
        <CheckBox
            android:text="Complete Set 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="100dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#FFF"/>
        <CheckBox
            android:text="Complete Set 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="100dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#FFF"/>

    </LinearLayout>
</LinearLayout>
