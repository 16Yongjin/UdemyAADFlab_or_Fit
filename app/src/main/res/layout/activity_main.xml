<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yongjin.flaborfit.MainActivity"
    android:background="#FF4B4B4B">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_cornera"
        android:backgroundTint="#2ca5f5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

        <TextView
            android:text="Weight Lifter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:paddingBottom="25dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/TextView01"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="23dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/weight"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="10 sets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:backgroundTint="?attr/colorControlHighlight"
            android:elevation="0dp"
            android:background="@drawable/rounded_cornera"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_cornera"
        android:backgroundTint="#916bcd"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:id="@+id/YogaBtn">

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:paddingBottom="25dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>

        <TextView
            android:text="Namaste-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/TextView01"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="23dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/lotus"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="11%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="1 hour"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingRight="20dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:backgroundTint="?attr/colorControlHighlight"
            android:elevation="0dp"
            android:background="@drawable/rounded_cornera"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:gravity="right"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_cornera"
        android:backgroundTint="#52ad56"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:id="@+id/CardBtn">

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:paddingBottom="25dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>

        <TextView
            android:text="Run like crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/TextView01"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/background_light"
            android:textSize="23dp"/>

        <TextView
            android:text="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="10 KM"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:backgroundTint="?attr/colorControlHighlight"
            android:elevation="0dp"
            android:background="@drawable/rounded_cornera"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/heart"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</LinearLayout>
